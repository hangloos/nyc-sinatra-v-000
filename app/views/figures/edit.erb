<h1>Edit a Figure</h1>
<form method="POST" action="/figures/<%=@figure.id%>">
   <label>Figure Name:</label>
<br></br>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
  <input type="hidden" name="figure[id]" value="<%=@figure.id%>">
  <label>Titles:</label>
<br>
  <%Title.all.each do |title| %>
<br>
  <label><%=title.name%></label>
<br>
  <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"
  <%= 'checked' if @title != [] && title.id == @title[0].id%>>
  
  <input type="hidden" name="title[name]" value="<%=title.name%>" id="<%=title.name%>">
  <%end%>
<br></br>
  <label>New Title: </label>
  <input type="text" name="title[name]" id="new_title">
<br></br>
<label>Landmarks:</label>
<br>
  <%Landmark.all.each do |landmark| %>
<br>
  <label><%=landmark.name%></label>
<br>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>" <%= 'checked' if @landmark != [] && landmark.id == @landmark[0].id%>>
  <input type="hidden" name="landmark[name]" value="<%=landmark.name%>" id="<%=landmark.name%>"
  <%end%>
  <label>New Landmark: </label>
  <input type="text" name="landmark[name]" id="new_landmark">
<br></br>
    <input type="submit" value="Edit Figure">
</form>